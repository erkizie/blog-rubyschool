<h2>Edit article!</h2>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
  <p><!-- article_path(@article) для отправки формы на конкертное ИД, method: :put изменение ПОСТ метода на ПУТ метод (можно ПАТЧ) -->
    Title: <br>
    <%= f.text_field :title %>
  </p>
  <p>
    Content: <br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>