<h2><%= @article.title %></h2>
<p><%= @article.text %></p>
<h3>Comments</h3>

<% @article.comments.each do |comment| %><!-- Вывод комментариев -->
  <p>
    <%= comment.body %> <br>
    <i>Said <%= comment.author %></i>
  </p>
<% end %>

<h4>Add comment</h4>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %><!-- @article.comments - "коллецкия", .build создаст новый объект, который не будет сохранён -->
    <p>
      Your name: <br>
      <%= f.text_field :author %>
    </p>
    <p>
      Comment: <br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</p>