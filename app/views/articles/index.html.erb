<h2>List of articles:</h2>

<% @articles.each do |article| %>

  <h3><%= article.title %></h3>

  <p><%= article.text %></p>

  <p>
    <%= link_to 'Show', article_path(article) %> <!-- Ссылка для перехода на конкретный пост -->
    <%= link_to 'Edit', edit_article_path(article) %> <!-- Ссылка для редактирования -->
    <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?'} %> <!-- Кнопка удаления с методом удаления и запросом на подтверждение -->
  </p>

  <hr>
<% end %>