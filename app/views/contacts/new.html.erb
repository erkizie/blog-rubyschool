<h2><%= t('contacts.contact_us') %></h2> <!-- i18n -->

<%= form_for :contact, url: contacts_path do |f| %> <!-- Вывод ошибок валидации -->

    <% if @contact && @contact.errors.any? %>

    <p>
      <%= @contact.errors.full_messages%>
    </p>

<% end %>

  <p>
    Email: <br>
    <%= f.text_field :email %>
  </p>
  <p>
    Message: <br>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit 'Send message', class: 'btn btn-primary' %>
  </p>
<% end %>